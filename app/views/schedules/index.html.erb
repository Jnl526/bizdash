<p id="notice"><%= notice %></p>
<div class="row m-0">

<div class="col-md-8">
<h1>Schedules</h1>
<%= month_calendar events: @schedules do |date, schedules| %>
  <%= date.strftime(" %d") %>
  <% schedules.each do |schedule| %>
    <div>
      <%= schedule.name %>
      <%= schedule.description %>

    </div>
  <% end %>
<% end %>
</div>
<div class="col-md-4">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.name %></td>
        <td><%= schedule.description %></td>
        <td><%= schedule.start_time %></td>
        <td><%= schedule.end_time %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Schedule', new_schedule_path %>

</div>
<br>

</div>